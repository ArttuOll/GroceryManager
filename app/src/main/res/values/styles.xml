<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text Styles -->
    <style name="TextLabels">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorMain</item>
    </style>

    <style name="TextSubLabels">
        <item name="font">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorMain</item>
    </style>

    <style name="TextBody">
        <item name="font">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorBody</item>
    </style>

    <!-- ImageView Styles -->
    <style name="listitem_imageviews">
        <item name="android:layout_width">@dimen/listitem_imageview_width</item>
        <item name="android:layout_height">@dimen/listitem_imageview_height</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@drawable/grocerylist_imageview_bg</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="activity_imageviews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">184dp</item>
        <item name="android:background">@drawable/imageview_bg_square</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
